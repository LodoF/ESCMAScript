{
  "name": "ESCMAScript",
  "productName": "ESCMAScript",
  "description": "ESCMAScript",
  "version": "1.0.1",
  "author": {
    "name": "xfang"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/undefinedESC/ESCMAScript"
  },
  "homepage": "http://sparkpos.cn/",
  "main": "app/main.js",
  "license": "ESCMAScript",
  "presets": [
    "es2015"
  ],
  "build": {
    "appId": "",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": true
    }
  },
  "asar": true,
  "scripts": {
    "postinstall": "install-app-deps",
    "build": "gulp build",
    "prerelease": "gulp build --env=production",
    "release": "build",
    "start": "gulp start",
    "pretest": "gulp build-unit --env=test",
    "test": "electron-mocha app/specs.js.autogenerated --renderer --require source-map-support/register",
    "coverage": "npm test -- -R scripts/istanbul-reporter",
    "pree2e": "gulp build-e2e --env=test",
    "e2e": "mocha app/e2e.js.autogenerated --require source-map-support/register",
    "babel": "babel src -d lib",
    "lint": "eslint ./ --fix"
  },
  "dependencies": {
    "buffer": "^5.0.6",
    "electron-updater": "^2.4.3",
    "fs-jetpack": "^0.13.3"
  },
  "devDependencies": {
    "7zip-bin": "^2.1.0",
    "ajv": "^5.2.0",
    "ajv-keywords": "^2.1.0",
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.5.2",
    "chai": "^3.5.0",
    "chokidar": "^1.7.0",
    "electron": "^1.6.6",
    "electron-builder": "^19.8.0",
    "electron-mocha": "^4.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-plugin-jsx-a11y": "^6.0.0",
    "gulp": "^3.9.1",
    "gulp-batch": "^1.0.5",
    "gulp-less": "^3.3.2",
    "gulp-plumber": "^1.1.0",
    "gulp-util": "^3.0.8",
    "gulp-watch": "^4.3.11",
    "istanbul": "^0.4.5",
    "leveldown": "^1.7.2",
    "minimatch": "^3.0.4",
    "minimist": "^1.2.0",
    "mocha": "^3.4.2",
    "rollup": "^0.41.6",
    "rollup-plugin-istanbul": "^1.1.0",
    "source-map-support": "^0.4.15",
    "spectron": "^3.7.1"
  }
}
